<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!--<script src="/js/jquery.min.js"></script>-->
    <script src="/js/bootstrap.min.js"></script>
    <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    -->
    <title>Serra Smart</title>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="container-fluid">
        <div class="row mt-4 ml-4 mr-4 border text-center">
            <div class="col">
                <h4>Relay Switches</h4>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        <form action="/lighton" method="POST">
                            <button type="submit"  class="btn btn-success" style="vertical-align: middle">Light Switch ON</button>
                        </form>
                    </div>
                    <div class="col">
                        <form action="/lightoff" method="POST">
                            <button type="submit" class="btn btn-danger">Light Switch OFF</button>
                        </form>
                    </div>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        <form action="/fanon" method="POST">
                            <button type="submit" class="btn btn-success">Fan Switch ON</button>
                        </form>
                    </div>
                    <div class="col">
                        <form action="/fanoff" method="POST">
                            <button type="submit" class="btn btn-danger">Fan Switch OFF</button>
                        </form>
                    </div>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        <form action="/pumpon" method="POST">
                            <button type="submit" class="btn btn-success">Pump Switch ON</button>
                        </form>
                    </div>
                    <div class="col">
                        <form action="/pumpoff" method="POST">
                            <button type="submit" class="btn btn-danger">Pump Switch OFF</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col border-left">
                <h4>Temperature & Humidity</h4>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        Internal Humidity: <%= tinthum %>%
                    </div>
                    <div class="col">
                        Internal Temperature: <%= tinttemp %>°C
                    </div>
                </div>   
                <div class="row mt-4 mb-4">
                    <div class="col">
                        External Humidity: <%= texthum %>%
                    </div>
                    <div class="col">
                        External Temperature: <%= texttemp %>°C
                    </div>
                </div>
            </div>
            <div class="col border-left">
                <h4>Sensors Values</h4>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        Light: <%= light %>
                    </div>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        Moisture : <%= moisture %>
                    </div>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col">
                        Water Level : <%= waterl %>
                    </div>
                </div>
            </div>
        </div>
    </div>  
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
   
    
        

  </body>
</html>